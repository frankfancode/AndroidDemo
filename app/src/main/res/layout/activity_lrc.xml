<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                tools:context="com.frankfancode.androiddemo.activity.LrcActivity">

    <com.frankfancode.androiddemo.widget.LrcView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@color/gray"
        app:lrc_focus_color="@color/white_smoke"
        app:lrc_unfocus_color="@color/gray_dark"
        app:progress_end_color="@color/gray_dark"
        app:progress_start_color="@color/white_smoke">

    </com.frankfancode.androiddemo.widget.LrcView>

</RelativeLayout>
